page {
  background-color: #f2eeee;
}

.pay-section {
  margin-top: 2rpx;
  background-color: white;
  width: 740rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 10rpx;
  font-size: 30rpx;
}

image {
  height: 40rpx;
  width: 40rpx;
  margin: 0 10rpx;
}

.pay-title {
  display: flex;
  color: grey;
  font-weight: bold;
}

.pay-method {
  display: flex;
  margin-top: 10rpx;
}

.frame {
  margin-left: 40rpx;
  border: 2rpx solid grey;
  border-radius: 5rpx;
  padding: 10rpx;
}

.selected {
  border: 2rpx solid red;
  color: red;
}

.disable {
  border: 2rpx solid #f2eeee;
  color: #f2eeee;
}

.deliver-section {
  margin-top: 20rpx;
  background-color: white;
  width: 740rpx;
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.deliver-title {
  font-weight: bold;
  color: grey;
  margin-top: 20rpx;
  display: flex;
}

.deliver-method {
  display: flex;
  margin-top: 10rpx;
}

.location-mind {
  height: 100rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
  border-top: 2rpx solid #f2eeee;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.deliver-time {
  display: flex;
  border-top: 2rpx solid #f2eeee;
  width: 710rpx;
  height: 50rpx;
  margin-top: 10rpx;
  align-items: center;
  padding: 20rpx;
  justify-content: space-between;
}

.time-picker {
  border-radius: 5rpx;
  border: 2rpx solid #f2eeee;
  padding: 10rpx;
  height: 40rpx;
}

.confirm-section {
  position: fixed;
  bottom: 10rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.confirm-btn {
  width: 50%;
  border-radius: 0;
}
