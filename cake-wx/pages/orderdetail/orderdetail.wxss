.product-container {
  width: 100%;
}

.product-item {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border-top: 2rpx solid #f2eeee;
}

.image-box {
  flex: 1;
  height: 180rpx;
  width: 180rpx;
  border: 1rpx solid #fee;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-box image {
  height: 160rpx;
  width: 160rpx;
}

.info-box {
  flex: 3;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  margin: 0 10rpx;
  align-items: flex-start;
}

.info-title {
  flex: 2;
  font-size: 40rpx;
}

.info-detail {
  flex: 1;
  font-size: 25rpx;
  color: grey;
}

.price-box {
  flex: 1;
}

.price {
  font-size: 30rpx;
  color: red;
}

.count {
  font-size: 25rpx;
  color: grey;
  margin-left: 200rpx;
}
