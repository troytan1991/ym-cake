.shopcart-list {
  align-items: center;
  margin-top: 10rpx;
}

checkbox-group {
  display: block;
  width: 750rpx;
}

.shopcart-item {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  border-bottom: 2rpx solid #f3f0f0;
  padding: 0rpx 0;
  position: relative;
  height: 220rpx;
}

.slide-item {
  background-color: white;
  display: flex;
  z-index: 1;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.shopcart-item .checkbox {
  display: inline-block;
  margin: 0 15rpx;
}

.shopcart-item image {
  width: 200rpx;
  height: 200rpx;
}

.cart-info {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  margin: 0 20rpx;
  flex: 1;
}

.info-detail {
  font-size: 30rpx;
  color: #949494;
  flex: 1;
  margin-top: 30rpx;
}

.price-info {
  display: flex;
  flex-direction: row;
  margin-bottom: 0;
  flex: 1;
}

.price {
  flex: 1;
  color: red;
}

.count-info {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.count-info view {
  border: 1rpx solid gray;
  text-align: center;
  width: 60rpx;
  height: 55rpx;
}

.hide-btn {
  z-index: 0;
  width: 150rpx;
  background-color: red;
  color: white;
  height: 100%;
  position: absolute;
  right: 0;
  display: block;
  text-align: center;
  line-height: 220rpx;
}

.line {
  height: 2rpx;
  background: #f3f0f0;
  margin: 15rpx 0;
}

.balance {
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  bottom: 0;
  z-index: 1;
  border-top: 1rpx solid #f3f0f0;
  background-color: white;
}

.balance checkbox {
  margin-left: 15rpx;
  font-size: 30rpx;
  color: grey;
}

.balance text {
  margin-left: 20rpx;
}

.pay-btn {
  margin-right: 0;
  border-radius:0;
}
