.addr-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.addr-item {
  padding: 10rpx;
  border-top: 2rpx solid #f2eeee;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-info text {
  margin: 10rpx 20rpx;
  font-size: 35rpx;
}

.default-text {
  border: 1rpx solid red;
  border-radius: 12rpx;
  padding: 0 5rpx;
  font-size: 25rpx;
  height: 35rpx;
  margin: 0 20rpx;
}

.icon-small {
  margin-left: 30rpx;
}

.selected {
  color: red;
}

.addr-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.addr-info text {
  font-size: 30rpx;
  color: grey;
  width: 90%;
}

.addr-edit {
  padding: 0 15rpx;
  border-left: 1rpx solid grey;
  margin-right: 0;
}

.addr-edit image {
  width: 60rpx;
  height: 60rpx;
}

.add-section {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  background-color: #f2eeee;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn {
  border-radius: 0;
  width: 80%;
  height: 70%;
  font-size: 30rpx;
}
